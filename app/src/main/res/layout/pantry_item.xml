<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantryItems_cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/offWhite"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/pantryItems_productName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/lato"
            android:text="Product Name"
            android:textColor="@android:color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pantryItems_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pantryItems_productName"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/lato"
            android:text="Brand Name"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/pantryItems_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product ID"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/pantryItems_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pantryItems_productName"
            android:layout_alignParentEnd="true"
            android:fontFamily="@font/lato"
            android:text="Quantity"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/exandableProductDetails"
            android:layout_below="@+id/pantryItems_brand"
            android:layout_marginTop="5dp"
            android:visibility="gone">

            <TextView
                android:id="@+id/pantryItems_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/lato"
                android:text="Volume"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/pantryItems_ingredientsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/lato"
                android:text="Ingredients"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pantryItems_ingredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pantryItems_ingredientsTitle"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/lato"
                android:text="The product ingredients"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pantryItems_diet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pantryItems_dietTitle"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/lato"
                android:text="The dietary warnings"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/pantryItems_dietTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pantryItems_ingredients"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="4dp"
                android:fontFamily="@font/lato"
                android:text="Incompatible with your dietary preferences:"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>