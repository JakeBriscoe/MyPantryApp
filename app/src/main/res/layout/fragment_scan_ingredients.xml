<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="96">

        <SurfaceView
            android:id="@+id/surfaceView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintVertical_bias="1.0" />

    </LinearLayout>

    <TextView
        android:id="@+id/txtScanTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20sp"
        android:layout_marginRight="10sp"
        android:fontFamily="@font/lato"
        android:text="For best results, please ensure the image is clear and that there is only one occurrence of the word 'Ingredients'."
        android:textAlignment="center"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnTakePicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:layout_weight="2"
        android:background="@color/dark"
        android:fontFamily="@font/lato"
        android:text="Scan Ingredients"
        android:textColor="@color/colorPrimary" />

    <Button
        android:id="@+id/scanIngredientsCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00E5EAE0"
        android:fontFamily="@font/lato"
        android:text="Cancel"
        android:layout_marginBottom="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginLeft="10sp"
        android:layout_weight="2"/>

</LinearLayout>



